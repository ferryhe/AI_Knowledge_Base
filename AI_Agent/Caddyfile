# Caddyfile - Reverse proxy configuration
# IMPORTANT: Replace "yourdomain.com" below with your actual domain name

{
    # Global options
    email admin@yourdomain.com  # For Let's Encrypt - CHANGE THIS
}

# HTTP to HTTPS redirect
# REPLACE yourdomain.com WITH YOUR ACTUAL DOMAIN
yourdomain.com {
    # Automatic HTTPS with Let's Encrypt
    
    # Reverse proxy to Streamlit app
    reverse_proxy rag-app:8501 {
        # WebSocket support for Streamlit
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Security headers
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Prevent MIME sniffing
        X-Content-Type-Options "nosniff"
        # XSS Protection
        X-XSS-Protection "1; mode=block"
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    # Rate limiting (optional)
    # NOTE: Standard Caddy 2 does not include built-in rate limiting.
    # You need to install the caddy-ratelimit plugin or use a different method.
    # See: https://github.com/mholt/caddy-ratelimit
    # Example with plugin:
    # rate_limit {
    #     zone example {
    #         key {remote_host}
    #         events 100
    #         window 1m
    #     }
    # }
    
    # Logging
    log {
        output file /var/log/caddy/access.log
        format json
    }
}

# Local development without HTTPS
# Uncomment for local testing
# :80 {
#     reverse_proxy rag-app:8501
# }
